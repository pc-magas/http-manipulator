{
    "restartable": "rs",
    "ignore": [
      ".git",
      "node_modules/**/node_modules"
    ],
    "verbose": true,
    "execMap": {
      "js": "node --harmony"
    },
    "events": {
      "restart": "echo \"App restarted due to change at:\n'$FILENAME'\" "
    },
    "watch": [
      "views",
      "static",
      "src"
    ],
    "env": {
      "NODE_ENV": "development"
    },
    "ext": "js,json,html,css,njk"
}